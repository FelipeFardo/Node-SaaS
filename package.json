{
  "name": "@siricascudo/api",
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm run env:load tsx watch src/http/server.ts",
    "db:generate": "pnpm run env:load drizzle-kit generate",
    "db:migrate": "pnpm run env:load drizzle-kit migrate",
    "db:studio": "pnpm run env:load drizzle-kit studio",
    "db:seed": "pnpm run env:load tsx src/db/seed.ts",
    "env:load": "dotenv -e ./.env --",
    "build": "tsup",
    "start": "node dist/http/server.js",
    "format": "biome format --write src",
    "lint": "biome lint --write .",
    "check": "biome check src"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.876.0",
    "@aws-sdk/s3-request-presigner": "^3.876.0",
    "@casl/ability": "^6.7.3",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^9.5.1",
    "@react-email/components": "^0.5.1",
    "@react-email/render": "^1.2.1",
    "@scalar/fastify-api-reference": "^1.34.6",
    "bcryptjs": "^3.0.2",
    "dayjs": "^1.11.14",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^5.0.3",
    "postgres": "^3.4.7",
    "stripe": "^18.4.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@faker-js/faker": "^8.4.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.11",
    "dotenv-cli": "^7.4.4",
    "drizzle-kit": "^0.31.4",
    "pg": "^8.16.3",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5"
  }
}
